<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.al_tair.storage.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.al_tair.storage.model.User">
        insert into user (username, password, telephone)
        value (#{username}, #{password}, #{telephone})
    </insert>

    <select id="selectUser" resultType="com.al_tair.storage.model.User">
        select * from user
    </select>
</mapper>